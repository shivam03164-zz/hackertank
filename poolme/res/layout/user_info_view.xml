<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <TextView
                    android:id="@+id/home_locn_label"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Location"
                    />

            <EditText
                    android:id="@+id/home_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/home_locn_label"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:editable="false"
                    android:enabled="false"
                    />

            <TextView
                    android:id="@+id/office_locn_label"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="fill_parent"
                    android:layout_below="@+id/home_text"
                    android:layout_height="wrap_content"
                    android:text="Office Location"
                    />

            <EditText
                    android:id="@+id/office_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/office_locn_label"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:editable="false"
                    android:enabled="false"/>

            <TextView
                    android:id="@+id/name_label"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="fill_parent"
                    android:layout_below="@+id/office_text"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    />

            <EditText
                    android:id="@+id/name_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/name_label"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />

            <TextView
                    android:id="@+id/email_label"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="fill_parent"
                    android:layout_below="@+id/name_text"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    />

            <EditText
                    android:id="@+id/email_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/email_label"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />

            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/email_text"

                    android:text="I want to register my vehicle"
                    android:id="@+id/vehicle_checkBox"
                    />

            <TextView
                    android:id="@+id/vmodel_label"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="fill_parent"
                    android:layout_below="@+id/vehicle_checkBox"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Model"
                    />

            <EditText
                    android:id="@+id/vmodel_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/vmodel_label"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />

            <TextView
                    android:id="@+id/vnumber_label"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="fill_parent"
                    android:layout_below="@+id/vmodel_text"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Number"
                    />

            <EditText
                    android:id="@+id/vnumber_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/vnumber_label"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />

            <TextView
                    android:id="@+id/vcapacity_label"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/vnumber_text"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"
                    android:text="Capacity"
                    />

            <Spinner
                    android:id="@+id/vcapacity_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vcapacity_label"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"
                    android:entries="@array/vcapacity_array"
                    />


            <Button
                    android:id="@+id/submit_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vcapacity_spinner"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:text="Next"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>